{
  "version": 1,
  "formatters": 
  {
      "simple": 
      {
        "format": "%(threadName)s: %(asctime)s: %(levelname)s: %(message)s",
        "datefmt": "%d/%m/%Y - %H:%M:%S"  
      }
  },
  "handlers": 
  {
    "site": 
    {
      "class": "logging.FileHandler",
      "level": "DEBUG",
      "formatter": "simple",
      "filename": "logs/site.log",
      "encoding": "utf8",
      "mode": "w"
    }
  },
  "loggers": 
  {
    "site": 
    {
      "level": "DEBUG",
      "handlers": 
      [
        "site"
      ]
    }
  }
}